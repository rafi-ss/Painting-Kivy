<PaintingWidget>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

<OurSlider@Slider>
    min: 0
    max: 1
    value: 0.5
    size_hint_y: None
    height: 50

<MainLayout>:
    orientation: 'vertical'

    PaintingWidget: 
        current_rgb_color:  red_slider.value, green_slider.value, blue_slider.value
        current_width: width_id.value

    OurSlider:
        id: red_slider
    OurSlider:
        id: green_slider
    OurSlider:
        id: blue_slider

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        Label:
            text: "Output Color: "
        Widget:
            canvas:
                Color:
                    rgb: red_slider.value, green_slider.value, blue_slider.value
                Rectangle:
                    size: self.size
                    pos: self.pos

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        Label:
            text: "Width :" + str( int(width_id.value) )
        Slider:
            id: width_id
            max : 20
            min : 1
            value: 2
            size_hint_y: None
            height: 50


